# 0 = false, 1 = true
count_num = 0
count_inc = 0
count_char = 0
count_space = 0

char = "`~!@#$%^&*()_+-=/*.,><;:?"
erros = ""

print("Obs: A senha deve conter pelo menos um número, um caractere especial, nenhum espaço e entre 5 a 10 caracteres")
password = input("Digite sua senha: ")

# Verificação de caracteres
for i in password:
    if i.isnumeric() == True:
        count_num += 1
        
    if i.isspace() == True:
        count_space += 1
        
    if i in char:
        count_char += 1

# Criação da resposta de erros
if count_num < 1:
    erros += "Um número. \n"
if count_space >= 1:
    erros += " Nenhum espaço. \n"
if count_char < 1:
    erros += " Um Caractere especial. \n"
if len(password) < 5 or len(password) > 10:
    erros += " Entre 5 e 10 caracteres \n"

# Resposta de erros
if erros == "":
    print("Parabéns, sua senha foi criada")
else:
    print("Sua senha deve ter pelo menos: \n", erros)
